<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".HelpAndSupport">

    <TextView
        android:id="@+id/title_help_and_support"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:textColor="@color/black"
        android:text="Help and support"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/things_you_can_do"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="100dp"
        android:text="Things you can do"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp" />
    <TextView
        android:id="@+id/things_you_can_do2"
        android:layout_width="match_parent"
        android:backgroundTint="@color/black"
        android:layout_height="55dp"
        android:layout_marginTop="140dp"
        android:text="@string/things_we_do"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/text_help_and_support"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="210dp"
        android:text="Get service"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/text_help_and_support3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="240dp"
        android:backgroundTint="@color/black"
        android:textAlignment="center"
        android:text="@string/Get_service"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/text2_help_and_support"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="340dp"
        android:text="Contact us"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        android:backgroundTint="@color/black"

        />
    <TextView
        android:id="@+id/text_help_and_support4"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:backgroundTint="@color/black"
        android:layout_marginTop="375dp"
        android:text="@string/Contact_us"
        android:textAlignment="center"
        android:textSize="15dp"
        />

    <Button
        android:id="@+id/btn_Ok_help_and_support"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green_200"
        android:text="Ok"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="400dp"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>